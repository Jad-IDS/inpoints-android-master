<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangular_rounded"
        android:layout_marginBottom="@dimen/normal_margin">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/rectangular_rounded_left_gray_75"
                android:gravity="center|center_vertical"
                android:paddingStart="@dimen/normal_margin"
                android:paddingEnd="@dimen/normal_margin">

            <ImageView
                    android:id="@+id/ivIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/mini_margin"
                    android:src="@drawable/baseline_school_24" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangular_rounded_right_white_75"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/normal_margin"
                    android:paddingEnd="@dimen/normal_margin">

                <com.ids.inpoint.custom.CustomTextViewBold
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginTop="@dimen/small_margin"
                        android:text="Title"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/font"
                        android:textStyle="bold" />

                <com.ids.inpoint.custom.CustomTextViewMedium
                        android:id="@+id/tvSubTitle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginTop="@dimen/small_margin"
                        android:text="Subtitle 1"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/font" />

                <com.ids.inpoint.custom.CustomTextViewMedium
                        android:id="@+id/tvSubTitle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginTop="@dimen/small_margin"
                        android:layout_marginBottom="@dimen/small_margin"
                        android:text="Subtitle 2"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/font" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/llActions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/normal_margin"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/normal_margin"
                    android:paddingEnd="@dimen/normal_margin">

                <ImageView
                        android:id="@+id/btEdit"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginEnd="@dimen/normal_margin"
                        android:src="@drawable/edit"
                        android:tint="@color/secondary" />

                <ImageView
                        android:id="@+id/btDelete"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginStart="@dimen/normal_margin"
                        android:src="@drawable/ic_delete"
                        android:tint="@color/secondary" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
