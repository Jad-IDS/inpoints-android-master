<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/normal_margin">
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        <com.ids.inpoint.custom.CustomTextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:text="@string/branches"
                android:textColor="@color/primary"
                android:textSize="@dimen/font" />


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/big_margin"
                android:background="@drawable/rounded_gray_rectangular"
                android:gravity="center_vertical"
                android:id="@+id/linearBranches"
                android:padding="@dimen/normal_margin">

            <com.ids.inpoint.custom.CustomTextViewMedium
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="start"
                    android:text="@string/branch" />


            <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/circle_secondary"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_add"
                        />
            </LinearLayout>

        </LinearLayout>





        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rvBranch"
                android:layout_marginTop="@dimen/big_margin"
                />


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/big_margin"
                android:background="@drawable/rounded_gray_rectangular"
                android:gravity="center_vertical"
                android:id="@+id/linearOpeningHour"
                android:padding="@dimen/normal_margin">

            <com.ids.inpoint.custom.CustomTextViewMedium
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="start"
                    android:text="@string/opening_hour" />
            <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/circle_secondary"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_add"
                        />
            </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rvOpeningHour"
                android:layout_marginTop="@dimen/big_margin"
                />

    </LinearLayout>
    <include layout="@layout/loading_trans"/>
</RelativeLayout>



</LinearLayout>