<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin"
        android:background="@drawable/rectangular_gray"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="@dimen/second_margin"
            android:layout_marginBottom="@dimen/second_margin"
            android:background="@drawable/circle_border_white">

        <ImageView
                android:id="@+id/ivTeam"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center|top"
                android:src="@drawable/profile" />
    </LinearLayout>

    <com.ids.inpoint.custom.CustomTextViewBold
            android:id="@+id/tvTeamName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal|top"
            android:gravity="center_horizontal"
            android:text="IDS Team"
            android:textColor="@color/primary"
            android:paddingBottom="@dimen/normal_margin"
            android:textSize="@dimen/font" />

    <LinearLayout

            android:id="@+id/btItemTeamAction"
            android:layout_width="match_parent"
            android:padding="@dimen/mini_margin"
            android:layout_height="@dimen/height_35"
            android:visibility="gone"
            android:background="@drawable/rectangular_secondary_round_bottom"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/ivItemTeamAction"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_team"
                android:tint="@color/white_trans" />

        <com.ids.inpoint.custom.CustomTextViewMedium
                android:id="@+id/tvItemTeamAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginLeft="@dimen/small_margin"
                android:text="@string/join_team"
                android:textColor="@color/white_trans"
                android:textSize="@dimen/font_small" />

    </LinearLayout>

</LinearLayout>