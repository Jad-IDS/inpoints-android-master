<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:background="@color/white"

 >
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/second_margin"
                android:paddingBottom="@dimen/second_margin"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/normal_margin"
                    android:paddingLeft="@dimen/normal_margin"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    >

                <com.ids.inpoint.custom.CustomTextViewMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/font"
                        />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:orientation="horizontal"
                        >
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:id="@+id/ivClose"
                            >
                        <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/close"
                                android:layout_gravity="center"
                                />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_medium"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:layout_marginRight="@dimen/normal_margin"
                    android:orientation="vertical"
                    >




                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/normal_margin"
                        android:orientation="vertical">

                    <com.ids.inpoint.custom.CustomTextViewMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/name"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font" />

                    <EditText
                            android:id="@+id/etName"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="@dimen/normal_margin"
                            android:background="@drawable/bg_recangular_border_gray"
                            android:hint="@string/name"
                            android:paddingStart="@dimen/normal_margin"
                            android:paddingLeft="@dimen/normal_margin"
                            android:textSize="@dimen/font" />


                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/normal_margin"
                        android:orientation="vertical">

                    <com.ids.inpoint.custom.CustomTextViewMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/description"
                            android:textColor="@color/black"

                            android:textSize="@dimen/font" />

                    <EditText
                            android:id="@+id/etDescription"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="@dimen/normal_margin"
                            android:background="@drawable/bg_recangular_border_gray"
                            android:hint="@string/description"
                            android:paddingStart="@dimen/normal_margin"
                            android:paddingLeft="@dimen/normal_margin"
                            android:textSize="@dimen/font" />


                </LinearLayout>




                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/big_margin"
                        >

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:padding="@dimen/normal_margin"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:id="@+id/linearPhoto"
                            android:layout_marginRight="@dimen/small_margin"
                            android:layout_marginEnd="@dimen/small_margin"
                            android:background="@drawable/rectangular_post_dark"
                            android:layout_weight="1">

                        <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/photo"
                                android:tint="@color/secondary"

                                />

                        <com.ids.inpoint.custom.CustomTextViewMedium
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/photo"
                                android:textSize="@dimen/font"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="@dimen/normal_margin"
                                android:layout_marginStart="@dimen/normal_margin"
                                />


                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:padding="@dimen/normal_margin"
                            android:id="@+id/linearVideo"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/mini_margin"
                            android:layout_marginRight="@dimen/mini_margin"
                            android:gravity="center"
                            android:background="@drawable/rectangular_post_dark"
                            android:layout_weight="1">

                        <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/video"
                                android:tint="@color/secondary"

                                />

                        <com.ids.inpoint.custom.CustomTextViewMedium
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/video"
                                android:textSize="@dimen/font"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="@dimen/normal_margin"
                                android:layout_marginStart="@dimen/normal_margin"
                                />


                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:padding="@dimen/normal_margin"
                            android:visibility="gone"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="@dimen/small_margin"
                            android:layout_marginStart="@dimen/small_margin"
                            android:background="@drawable/rectangular_post_button"
                            android:layout_weight="1">

                        <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/date"


                                />

                        <com.ids.inpoint.custom.CustomTextViewMedium
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/event"
                                android:textSize="@dimen/font"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="@dimen/normal_margin"
                                android:layout_marginStart="@dimen/normal_margin"
                                />


                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/normal_margin"
                        >

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:padding="@dimen/normal_margin"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_marginRight="@dimen/small_margin"
                            android:layout_marginEnd="@dimen/small_margin"
                            android:background="@drawable/rectangular_post_button"
                            android:layout_weight="1">

                        <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/location"


                                />

                        <com.ids.inpoint.custom.CustomTextViewMedium
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/check_in"
                                android:textSize="@dimen/font"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="@dimen/normal_margin"
                                android:layout_marginStart="@dimen/normal_margin"
                                />


                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:padding="@dimen/normal_margin"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/mini_margin"
                            android:layout_marginRight="@dimen/mini_margin"
                            android:gravity="center_vertical"
                            android:background="@drawable/rectangular_post_button"
                            android:layout_weight="1">

                        <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/comment"


                                />

                        <com.ids.inpoint.custom.CustomTextViewMedium
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/feedback"
                                android:textSize="@dimen/font"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="@dimen/normal_margin"
                                android:layout_marginStart="@dimen/normal_margin"
                                />


                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:padding="@dimen/normal_margin"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="@dimen/small_margin"
                            android:layout_marginStart="@dimen/small_margin"
                            android:background="@drawable/rectangular_post_button"
                            android:layout_weight="1">

                        <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/video"
                                android:tint="@color/secondary"

                                />

                        <com.ids.inpoint.custom.CustomTextViewMedium
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/live"
                                android:textSize="@dimen/font"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="@dimen/normal_margin"
                                android:layout_marginStart="@dimen/normal_margin"
                                />


                    </LinearLayout>
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rvMediaImages"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/big_margin"
                        />
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearVideoLinks"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/normal_margin"
                        android:orientation="vertical">


                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/normal_margin"
                            >
                        <RelativeLayout
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_recangular_border_gray">
                            <Spinner
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/spVideoType"
                                    style="@style/Widget.AppCompat.DropDownItem.Spinner"
                                    />
                        </RelativeLayout>
                        <EditText
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/bg_recangular_border_gray"
                                android:hint="@string/enter_video_link"
                                android:id="@+id/etVideoUrl"
                                android:layout_marginLeft="@dimen/normal_margin"
                                android:layout_marginRight="@dimen/normal_margin"
                                android:paddingLeft="@dimen/normal_margin"
                                android:paddingStart="@dimen/normal_margin"

                                />

                        <LinearLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/rectangular_secondary"
                                android:layout_gravity="center"
                                android:id="@+id/btAddVideo"
                                android:gravity="center"
                                >
                            <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/icon_upload"
                                    android:layout_gravity="center"

                                    />

                        </LinearLayout>

                    </LinearLayout>


                    <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/normal_margin"
                            android:id="@+id/rvVideoLinks"
                            />




                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_marginTop="@dimen/big_margin"
                    android:layout_marginRight="@dimen/normal_margin"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:layout_marginBottom="@dimen/normal_margin"
                    android:orientation="horizontal">

                <LinearLayout
                        android:id="@+id/btCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_35"
                        android:layout_marginEnd="@dimen/normal_margin"
                        android:background="@drawable/rectangular_secondary_border"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/big_margin"
                        android:paddingEnd="@dimen/big_margin">

                    <com.ids.inpoint.custom.CustomTextViewMedium
                            android:id="@+id/tvItemTeamAction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cancel"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/font_small" />

                </LinearLayout>

                <LinearLayout
                        android:id="@+id/btSave1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_35"
                        android:background="@drawable/rectangular_secondary"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/big_margin"
                        android:paddingEnd="@dimen/big_margin">

                    <com.ids.inpoint.custom.CustomTextViewMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/save"
                            android:textColor="@color/white_trans"
                            android:textSize="@dimen/font_small" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <include layout="@layout/loading_trans"/>

    </RelativeLayout>






</LinearLayout>