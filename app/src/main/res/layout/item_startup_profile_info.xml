<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:padding="@dimen/normal_margin"
        android:background="@drawable/rounded_gray_rectangular"
        >

    <com.ids.inpoint.custom.CustomTextViewMedium
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/mini_margin"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/mini_margin"
            android:textColor="@color/primary"
            android:textSize="@dimen/font" />

    <com.ids.inpoint.custom.CustomTextViewMedium
            android:id="@+id/tvValue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/mini_margin"
            android:paddingLeft="@dimen/mini_margin"
            android:textColor="@color/secondary"
            android:textSize="@dimen/font" />


</LinearLayout>