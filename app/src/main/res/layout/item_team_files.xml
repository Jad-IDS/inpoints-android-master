<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:background="@drawable/rectangular_gray"
                    android:layout_marginTop="@dimen/normal_margin"
>


        <LinearLayout android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:layout_gravity="center_vertical"
                      android:gravity="center_vertical"
                      android:orientation="horizontal"
        >

            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/ivFileType"
                    android:layout_marginRight="@dimen/mini_margin"
                    android:layout_marginLeft="@dimen/mini_margin"
            />
            <com.ids.inpoint.custom.CustomTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingLeft="@dimen/mini_margin"
                    android:textColor="@color/black"
                    android:paddingRight="@dimen/mini_margin"
                    android:id="@+id/tvDescription"
                    android:textSize="@dimen/font_too_small"
            />

        </LinearLayout>

         <LinearLayout
             android:layout_width="1dp"
             android:layout_height="match_parent"
             android:background="@color/gray_medium_2"/>


    <LinearLayout android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:orientation="horizontal"
    >


        <com.ids.inpoint.custom.CustomTextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:id="@+id/tvSize"
                android:paddingLeft="@dimen/mini_margin"
                android:paddingRight="@dimen/mini_margin"

                android:textSize="@dimen/font_too_small"
        />

    </LinearLayout>

    <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray_medium_2"/>

    <LinearLayout android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:orientation="horizontal"
    >

        <com.ids.inpoint.custom.CustomTextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:paddingLeft="@dimen/mini_margin"
                android:paddingRight="@dimen/mini_margin"
                android:id="@+id/tvDate"
                android:textSize="@dimen/font_too_small"
        />

    </LinearLayout>

    <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray_medium_2"/>


    <LinearLayout android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:orientation="horizontal"
    >

        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="@dimen/mini_margin"
                android:src="@drawable/ic_download"
                android:id="@+id/btDownload"
                android:layout_marginLeft="@dimen/mini_margin"
        />

        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/btEdit"
                android:src="@drawable/ic_pen"
                android:layout_marginRight="@dimen/mini_margin"
                android:layout_marginLeft="@dimen/mini_margin"
        />

        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/btDelete"
                android:src="@drawable/ic_trash"
                android:layout_marginRight="@dimen/mini_margin"
                android:layout_marginLeft="@dimen/mini_margin"
        />
    </LinearLayout>


</LinearLayout>