<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".controller.Fragments.FragmentSettings">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_40"
            android:layout_marginLeft="@dimen/second_margin"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_marginRight="@dimen/second_margin"
            android:background="@drawable/rectangular_gray"
            android:orientation="vertical"
            android:padding="@dimen/normal_margin">

        <com.ids.inpoint.custom.CustomTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:textColor="@color/primary"
                android:textSize="@dimen/large_font"
                android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_45"
            android:layout_marginLeft="@dimen/second_margin"
            android:layout_marginTop="@dimen/big_margin"
            android:layout_marginRight="@dimen/second_margin"
            android:background="@drawable/rectangular_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/normal_margin">

        <com.ids.inpoint.custom.CustomTextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/language"
                android:textColor="@color/primary"
                android:textSize="@dimen/medium_font" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

            <LinearLayout
                    android:id="@+id/btArabic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/normal_margin"
                    android:background="@drawable/rectangular_secondary_border"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/big_margin"
                    android:paddingEnd="@dimen/big_margin">

                <com.ids.inpoint.custom.CustomTextViewMedium
                        android:id="@+id/tvItemTeamAction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/f_arabic"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/font_small" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/btEnglish"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangular_secondary"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/big_margin"
                    android:paddingEnd="@dimen/big_margin">

                <com.ids.inpoint.custom.CustomTextViewMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/f_english"
                        android:textStyle="bold"
                        android:textColor="@color/white_trans"
                        android:textSize="@dimen/font_small" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_40"
            android:layout_marginLeft="@dimen/second_margin"
            android:layout_marginTop="@dimen/second_margin"
            android:layout_marginRight="@dimen/second_margin"
            android:background="@drawable/rectangular_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/normal_margin">

        <com.ids.inpoint.custom.CustomTextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notifications"
                android:textColor="@color/primary"
                android:textSize="@dimen/font" />

        <Switch
                android:id="@+id/swShowNotifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="@color/primary"
                android:textSize="@dimen/font" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_40"
            android:layout_marginLeft="@dimen/second_margin"
            android:layout_marginTop="@dimen/second_margin"
            android:layout_marginRight="@dimen/second_margin"
            android:background="@drawable/rectangular_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/normal_margin">

        <com.ids.inpoint.custom.CustomTextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/version"
                android:textColor="@color/primary"
                android:textSize="@dimen/font" />

        <com.ids.inpoint.custom.CustomTextViewMedium
                android:id="@+id/tvVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="1.5.0"
                android:textColor="@color/primary"
                android:textSize="@dimen/font" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/big_margin"
            android:layout_gravity="end"
            android:gravity="end">
        <com.ids.inpoint.custom.CustomTextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/btLogout"
               android:text="@string/logout"
                android:textColor="@color/white"
                android:textSize="@dimen/font"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/red"
                android:paddingLeft="@dimen/big_margin"
                android:paddingRight="@dimen/big_margin"

                android:layout_marginEnd="@dimen/normal_margin"
                android:layout_marginRight="@dimen/normal_margin"
        />
    </LinearLayout>


</LinearLayout>