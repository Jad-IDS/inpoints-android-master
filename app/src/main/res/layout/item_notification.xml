<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="80dp">

<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray_medium_2"
            android:layout_marginLeft="18dp"
    />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/second_margin"
            android:layout_marginBottom="@dimen/second_margin"
    >

        <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/ivRead"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="@dimen/second_margin"
                android:layout_marginStart="@dimen/second_margin"
                android:src="@drawable/circle_secondary"
        />


        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginLeft="@dimen/normal_margin"
                android:orientation="vertical"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

            >
            <com.ids.inpoint.custom.CustomTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvNotCount"
                    android:text=""
            />


                <com.ids.inpoint.custom.CustomTextViewMedium
                        android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                        android:id="@+id/tvNotText"
                        android:textSize="@dimen/font"
                        android:layout_marginLeft="@dimen/mini_margin"
                        android:layout_marginStart="@dimen/mini_margin"
                        android:text="lorem ipsum lorem ipsum lorenm upsum"
                        android:textColor="@color/gray_dark"
                />
            </LinearLayout>

            <com.ids.inpoint.custom.CustomTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019-12-12"
                    android:id="@+id/tvNotificationDate"
                    android:layout_marginTop="@dimen/small_margin"
                    android:textSize="@dimen/font_small"
            />
        </LinearLayout>


        <ImageView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_marginRight="@dimen/normal_margin"
                android:layout_marginEnd="@dimen/normal_margin"
                android:id="@+id/ivNotificationImage"
        />


    </LinearLayout>
    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/gray_medium_2"
          android:layout_alignParentBottom="true"/>
</RelativeLayout>

</LinearLayout>