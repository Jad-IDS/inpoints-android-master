<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingTop="@dimen/second_margin"
        android:paddingBottom="@dimen/second_margin"



        >


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:paddingRight="@dimen/normal_margin"
            android:paddingLeft="@dimen/normal_margin"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            >

        <com.ids.inpoint.custom.CustomTextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/opening_hour"
                android:textColor="@color/primary"
                android:textSize="@dimen/font"
                />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                android:orientation="horizontal"
                >
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:id="@+id/ivClose"
                    >
                <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/close"
                        android:layout_gravity="center"
                        />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_medium"/>






    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:orientation="vertical"
            >




            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <com.ids.inpoint.custom.CustomTextViewMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/big_margin"
                        android:text="@string/day"
                        android:textColor="@color/black"

                        android:textSize="@dimen/font" />

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="@dimen/normal_margin"
                        android:background="@drawable/bg_recangular_border_gray"

                        >


                    <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="40dp"

                            android:background="@color/transparent"
                            android:textSize="@dimen/font"
                            android:id="@+id/spDays"

                            />
                    <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/arrow_down"
                            android:id="@+id/ivArrowDown"
                            android:layout_marginEnd="@dimen/normal_margin"
                            />
                </RelativeLayout>


            </LinearLayout>




<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/mini_margin"
            android:layout_marginEnd="@dimen/mini_margin"
            android:layout_marginTop="@dimen/normal_margin"
            android:orientation="vertical">

        <com.ids.inpoint.custom.CustomTextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/from_time"
                android:textColor="@color/black"
                android:textSize="@dimen/font" />

        <com.ids.inpoint.custom.CustomTextViewMedium
                android:id="@+id/tvFrom"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/secondary"
                android:layout_marginTop="@dimen/normal_margin"
                android:background="@drawable/bg_recangular_border_gray"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:hint="@string/from_time"
                android:paddingStart="@dimen/normal_margin"
                android:paddingLeft="@dimen/normal_margin"
                android:textSize="@dimen/font" />


    </LinearLayout>
    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/mini_margin"
            android:layout_marginLeft="@dimen/mini_margin"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_margin"
            android:orientation="vertical">

        <com.ids.inpoint.custom.CustomTextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/to_time"
                android:textColor="@color/black"
                android:textSize="@dimen/font" />

        <com.ids.inpoint.custom.CustomTextViewMedium
                android:id="@+id/tvTo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/secondary"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/normal_margin"
                android:background="@drawable/bg_recangular_border_gray"
                android:hint="@string/to_time"
                android:paddingStart="@dimen/normal_margin"
                android:paddingLeft="@dimen/normal_margin"
                android:textSize="@dimen/font" />


    </LinearLayout>


</LinearLayout>




    </LinearLayout>













    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginTop="@dimen/big_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginBottom="@dimen/normal_margin"
            android:orientation="horizontal">

        <LinearLayout
                android:id="@+id/btCancel"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_35"
                android:layout_marginEnd="@dimen/normal_margin"
                android:background="@drawable/rectangular_secondary_border"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/big_margin"
                android:paddingEnd="@dimen/big_margin">

            <com.ids.inpoint.custom.CustomTextViewMedium
                    android:id="@+id/tvItemTeamAction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/font_small" />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/btSave"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_35"
                android:background="@drawable/rectangular_secondary"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/big_margin"
                android:paddingEnd="@dimen/big_margin">

            <com.ids.inpoint.custom.CustomTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    android:textColor="@color/white_trans"
                    android:textSize="@dimen/font_small" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>