<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"

        android:gravity="center_vertical"
        android:layout_height="wrap_content">


    <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:src="@drawable/avatar"
            android:id="@+id/ivUser"

    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginStart="@dimen/normal_margin"

    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:orientation="horizontal"

        >

            <com.ids.inpoint.custom.CustomTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ctvName"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/font"


            />

            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/level"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:layout_marginStart="@dimen/normal_margin"
                    android:tint="@color/secondary"

            />

            <com.ids.inpoint.custom.CustomTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/level_1"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:layout_marginStart="@dimen/small_margin"

                    android:textSize="@dimen/font_small"
                    android:textColor="@color/secondary"

            />

            <com.ids.inpoint.custom.CustomTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="2dp"
                    android:id="@+id/ctvLevel"
                    android:layout_marginStart="2dp"
                    android:textSize="@dimen/font_small"
                    android:textColor="@color/secondary"
            />

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <com.ids.inpoint.custom.CustomTextViewMedium
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="at Lebanese University"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:maxWidth="150dp"
                    android:id="@+id/ctvUni"
                    android:textSize="@dimen/font_small"

            />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:paddingTop="@dimen/normal_margin"
                    android:paddingBottom="@dimen/normal_margin"
                    android:id="@+id/linearShow"
                    android:layout_marginRight="12dp"
                    android:layout_marginEnd="12dp"

            >
                <com.ids.inpoint.custom.CustomTextViewMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvShowMoreLess"


                        android:textSize="@dimen/font"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="@string/show_less"
                        android:textColor="@color/secondary"

                />

                <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/arrow_down"
                        android:layout_marginLeft="@dimen/mini_margin"
                        android:layout_marginStart="@dimen/mini_margin"
                />



            </LinearLayout>
        </LinearLayout>

        <com.ids.inpoint.custom.CustomTextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ctvTimePost"
                android:textSize="@dimen/font_small"

        />

    </LinearLayout>

</LinearLayout>