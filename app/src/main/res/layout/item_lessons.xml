<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:layout_marginTop="@dimen/normal_margin"
              android:id="@+id/linearItemLessons"
              android:orientation="horizontal"
              android:background="@drawable/rounded_gray_rectangular"

>



        <com.ids.inpoint.custom.CustomTextViewBold
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/medium_font"
                android:id="@+id/tvCounter"
                android:textColor="@color/gray_dark"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="1"
                android:background="@drawable/left_rounded_gray"

        />

        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_lesson"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/second_margin"
                android:layout_marginStart="@dimen/second_margin"
        />

        <com.ids.inpoint.custom.CustomTextViewMedium
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/tvLessonTile"
                android:text="lesson"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/normal_margin"
                android:layout_marginRight="@dimen/normal_margin"
        />



        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow_right"
                android:tint="@color/primary"

                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/normal_margin"

                android:textColor="@color/primary"

        />






</LinearLayout>