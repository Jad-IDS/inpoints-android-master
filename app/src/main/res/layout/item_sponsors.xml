<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="@dimen/mini_margin"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:gravity="center_vertical"
                  android:orientation="horizontal"
    >
        <com.ids.inpoint.custom.CustomTextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:id="@+id/tvResource"
        />
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="35dp"
                      android:layout_gravity="end"
                      android:gravity="end"
        >

            <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangular_secondary"
                    android:layout_gravity="center"
                    android:gravity="center"

            >
                <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/sponsors"
                        android:layout_gravity="center"
                />

                <com.ids.inpoint.custom.CustomTextViewMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/font"
                        android:id="@+id/tvSponsor"
                        android:textColor="@color/white_trans"
                        android:text="@string/sponsor"
                        android:layout_marginStart="@dimen/mini_margin"
                        android:layout_marginLeft="@dimen/mini_margin"
                />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>