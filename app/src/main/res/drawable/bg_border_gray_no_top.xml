<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true"
          android:top="-1dp"
          android:left="-1dp"
          android:right="-1dp"
          android:bottom="0dp">
        <shape android:shape="rectangle" >
            <corners
                    android:radius="@dimen/mini_radius"  />

            <stroke  android:width="1dip" android:color="@color/gray_medium_2" />
            <gradient android:angle="-90" android:startColor="@color/white"
                      android:endColor="@color/white"  />
        </shape>
    </item>
    <item android:state_focused="true"
          android:top="-1dp"
          android:left="-1dp"
          android:right="-1dp"
          android:bottom="0dp">
        <shape android:shape="rectangle"  >
            <corners
                    android:radius="@dimen/mini_radius" />
            <stroke android:width="1dip" android:color="@color/gray_medium_2" />
            <solid android:color="@color/white"/>
        </shape>
    </item>
    <item         android:top="-1dp"
                  android:left="-1dp"
                  android:right="-1dp"
                  android:bottom="0dp">
        <shape android:shape="rectangle"  >
            <corners
                    android:radius="@dimen/mini_radius" />
            <stroke android:width="1dip" android:color="@color/gray_medium_2" />
            <solid android:color="@color/white"/>
        </shape>
    </item>
</selector>